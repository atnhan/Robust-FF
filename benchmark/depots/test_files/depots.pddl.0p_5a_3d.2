(define (domain Depot)
(:requirements :typing)
(:types place locatable - object
	depot distributor - place
        truck hoist surface - locatable
        pallet crate - surface)

(:predicates (at ?x - locatable ?y - place) 
             (on ?x - crate ?y - surface)
             (in ?x - crate ?y - truck)
             (lifting ?x - hoist ?y - crate)
             (available ?x - hoist)
             (clear ?x - surface))
	
(:action Drive
:parameters (?x - truck ?y - place ?z - place) 
:precondition
	(and
		(at ?x ?y)
	)
:poss-precondition
	(and
	)
:effect
	(and
		(not (at ?x ?y))
	)
:poss-effect
	(and
		(at ?x ?z)
	)
)

(:action Lift
:parameters (?x - hoist ?y - crate ?z - surface ?p - place)
:precondition
	(and
		(at ?y ?p)
		(at ?x ?p)
		(clear ?y)
		(on ?y ?z)
		(available ?x)
	)
:poss-precondition
	(and
	)
:effect
	(and
		(clear ?z)
		(not (at ?y ?p))
		(not (available ?x))
		(not (on ?y ?z))
	)
:poss-effect
	(and
		(lifting ?x ?y)
		(not (clear ?y))
		(not (at ?x ?p))
	)
)

(:action Drop 
:parameters (?x - hoist ?y - crate ?z - surface ?p - place)
:precondition
	(and
		(lifting ?x ?y)
		(at ?z ?p)
		(at ?x ?p)
		(clear ?z)
	)
:poss-precondition
	(and
	)
:effect
	(and
		(on ?y ?z)
		(available ?x)
		(clear ?y)
		(not (clear ?z))
		(not (lifting ?x ?y))
	)
:poss-effect
	(and
		(at ?y ?p)
		(not (at ?x ?p))
	)
)

(:action Load
:parameters (?x - hoist ?y - crate ?z - truck ?p - place)
:precondition
	(and
		(lifting ?x ?y)
		(at ?z ?p)
		(at ?x ?p)
	)
:poss-precondition
	(and
	)
:effect
	(and
		(available ?x)
		(not (lifting ?x ?y))
	)
:poss-effect
	(and
		(in ?y ?z)
	)
)

(:action Unload 
:parameters (?x - hoist ?y - crate ?z - truck ?p - place)
:precondition
	(and
		(at ?z ?p)
		(in ?y ?z)
		(available ?x)
		(at ?x ?p)
	)
:poss-precondition
	(and
	)
:effect
	(and
		(not (available ?x))
		(not (in ?y ?z))
	)
:poss-effect
	(and
		(lifting ?x ?y)
	)
)

)